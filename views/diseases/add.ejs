<form method="POST" action="/diseases">
	<div class="form-group">
		<label>Name</label>
		<input type="text" name="name" placeholder="Type disease name here" class="form-control">
	</div>
	<div class="form-group">
		<label>Description</label>
		<textarea name="description" class="form-control"></textarea>
	</div>

	<div class="form-group">
		<label>Severity</label>
		<input type="number" name="severity" placeholder="Is it bad?" class="form-control">
	</div>

	<div class="form-group">
		<label>Transmission</label>
		<input type="text" name="transmission" placeholder="How is it transmitted?" class="form-control">
	</div>

	<div class="form-group">
		<label>Symptoms</label>
		<input type="text" name="symptoms" placeholder="What are the symptoms?" class="form-control">
	</div>

	<input type="submit" class="btn btn-success">
</form>
